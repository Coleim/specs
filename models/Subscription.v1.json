{
  "title": "Subscription",
  "description": "Souscription Toaztr",
  "type": "object",
  "properties": {
    "type": {
      "$ref": "./SubscriptionType.v1.json"
    },
    "status": {
      "type": "string",
      "description": "Status de la souscription.",
      "enum": [
        "ACTIVE",
        "CLOSED"
      ]
    },
    "source": {
      "type": "string",
      "description": "Système qui a créé cette souscription.",
      "enum": [
        "STRIPE",
        "MANUAL",
        "MASTER"
      ]
    },
    "quantity": {
      "type": "integer",
      "description": "Nombre d'items inclus dans la souscription.",
      "minimum": 1,
      "default": 1
    },
    "used": {
      "type": "integer",
      "description": "Nombre d'items en utilisation.",
      "minimum": 0,
      "default": 0
    }
  },
  "required": [
    "type",
    "status",
    "source",
    "quantity",
    "used"
  ]
}

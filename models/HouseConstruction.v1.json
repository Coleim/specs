{
  "title": "HouseConstruction",
  "description": "Project de construction de maison individuelle.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "HOUSE_CONSTRUCTION"
      ]
    },
    "project_state": {
      "$ref": "./ProjectState.v1.json"
    },
    "administrative_information": {
      "$ref": "./AdministrativeInformation.v1.json"
    },
    "calls_for_funds": {
      "$ref": "./CallsForFunds.v1.json"
    },
    "surfaces": {
      "$ref": "./Surfaces.v1.json"
    },
    "delivery_date": {
      "description": "Date de livraison.",
      "format": "date-time",
      "type": "string"
    },
    "seller": {
      "$ref": "./Contact.v1.json"
    },
    "dpe_rate": {
      "$ref": "./DpeRate.v1.json"
    },
    "construction_norm": {
      "description": "Norme de construction.",
      "type": "string"
